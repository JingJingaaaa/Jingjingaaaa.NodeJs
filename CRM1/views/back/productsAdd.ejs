<script>
     $(function () {
        $('#submit').click(function () {
            $.ajax({
                url: '/admin/productsAdd',
                type: 'POST',
                data: $('form').serialize(),
                success: function (res) {
                    if(res.status == 0){
                        location.href='/admin/products';
                    }else{
                        alert(res.msg)
                    }
                },
                error: function (err) {
                    throw err;
                }
            })
        })
     })
</script>
